<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:id="@+id/container"
    android:layout_width="match_parent" android:layout_height="match_parent"
    tools:context=".MainActivity" tools:ignore="MergeRootFrame"
    style="@style/MeteO">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Last station information"
        android:id="@+id/meteO"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="10dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="50dp"

        android:id="@+id/action_settings"
        style="@style/AppTheme">

        <TextView
            android:layout_width="wrap_content"
            android:textSize="80sp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/temperatureValue"
            android:text="20"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="12"
            android:layout_marginLeft="100dp"
            android:id="@+id/humidityValue"
            android:layout_marginTop="130dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.3"
            android:textSize="25dp"
            android:id="@+id/lightLevelValue"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="290dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="135"
            android:textSize="25dp"
            android:id="@+id/pressureValue"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="200dp"
         />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="NE"
            android:id="@+id/windDirectionValue"
            android:textSize="25dp"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="290dp"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="15"
            android:textSize="25dp"
            android:id="@+id/windSpeedValue"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="55dp"
            android:layout_centerVertical="@+id/temperatureValue"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0.2"
            android:textSize="25dp"
            android:layout_marginLeft="48dp"
            android:layout_marginTop="55dp"
            android:id="@+id/rainValue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Updating..."
            android:id="@+id/updatedAtValue"
            android:textSize="25dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="263dp" />



        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2"
            android:layout_marginLeft="47dp"
            android:layout_marginTop="5dp"

            android:src="@mipmap/rain3"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView3"
            android:src="@mipmap/windy3"
            android:layout_marginLeft="275dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView4"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="50dp"
            android:src="@mipmap/raindrops"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView5"
            android:layout_marginLeft="245dp"
            android:layout_marginTop="130dp"
            android:src="@mipmap/wind39"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView6"
            android:src="@mipmap/pressure6"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="200dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView7"
            android:src="@mipmap/light"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="245dp"/>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:id="@+id/imageView8"
            android:src="@mipmap/clock104"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="260dp"/>

        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/refreshButton"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="350dp"
            android:src="@mipmap/arrows130"/>

    </RelativeLayout>

</FrameLayout>
